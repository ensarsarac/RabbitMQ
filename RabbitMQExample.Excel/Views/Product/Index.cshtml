
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a asp-controller="Product" asp-action="CreateProduct" class="btn btn-info" id="excelBtn">Excel oluştur</a>


@section Scripts{

    <script>
        var excelBtn = document.querySelector("#excelBtn");
        excelBtn.addEventListener("click", ()=>{
            Swal.fire({
                position: "top-end",
                icon: "success",
                title: "Excel oluşturma işlemi başlatıldı, bittiğinde size bildirim göndereceğiz.",
                showConfirmButton: false,
                timer: 1500
            });
        });
    </script>

}